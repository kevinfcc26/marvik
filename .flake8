[flake8]
per-file-ignores =
    # line too long
    api/open_api_docs/response_example/*.py: E501,
    api/tests/mocks/*.py: E501,
    api/models/__init__.py: F401
max-line-length = 120

# see: https://github.com/PyCQA/pycodestyle/issues/373
# see: https://www.flake8rules.com/rules/W503.html
ignore = E203, W503
exclude =
    .git,
    __pycache__,
    api/migrations
    api/tests/mocks
